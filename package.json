{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "start": "npm run build:prod",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tsc && npm run lint:file -- '*.ts' 'src/**/*.ts{,x}'",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest --config .jestrc.json",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:hot": "cross-env NODE_ENV=development HOT_MODULES=true ts-node src/webpack/server",
    "server:story": "cross-env NODE_ENV=development STORYBOOK=true start-storybook -p 9001",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "build:story": "cross-env NODE_ENV=production STORYBOOK=true build-storybook -o $PWD/story"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.5.1",
    "@storybook/addon-actions": "^3.4.6",
    "@storybook/react": "^3.4.6",
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/globule": "^1.1.0",
    "@types/hapi": "^17.0.12",
    "@types/jest": "^23.0.0",
    "@types/node": "^10.3.1",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.6",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-redux": "^6.0.2",
    "@types/storybook__addon-actions": "^3.0.3",
    "@types/storybook__react": "^3.0.7",
    "@types/webpack": "^4.4.0",
    "@types/webpack-env": "^1.13.6",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "colors.css": "^3.0.0",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "file-loader": "^1.1.11",
    "globule": "^1.2.1",
    "hapi": "^17.5.1",
    "hapi-webpack-plugin": "^3.0.0",
    "hard-reducer": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "jest-enzyme": "^6.0.1",
    "lint-staged": "^7.1.3",
    "normalize.css": "^8.0.0",
    "react": "^16.4.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.4.0",
    "react-hot-loader": "^4.3.0",
    "react-redux": "^5.0.7",
    "react-test-renderer": "^16.4.0",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0",
    "styled-components": "^3.3.2",
    "trash-cli": "^1.3.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-immutable": "^4.5.4",
    "tslint-language-service": "^0.9.9",
    "tslint-react": "^3.6.0",
    "tslint-sonarts": "^1.7.0",
    "typescript": "^2.9.1",
