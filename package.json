{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "bin": "dist/bin/app.js",
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/common/store.ts",
      "<rootDir>/jest/"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx"
    ],
    "setupFiles": [
      "<rootDir>/jest/shims.ts"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.ts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "transform": {
      "\\.tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "package": "npm run build:prod && npm pack && npm run clean",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "npm run lint:file -- '*.ts' 'src/**/*.ts{,x}'",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:dev": "cross-env NODE_ENV=development node-dev -r ts-node/register/type-check src/bin/app.ts",
    "server:hot": "cross-env HOT_MODULES=true npm run server:dev",
    "server:story": "cross-env NODE_ENV=development STORYBOOK=true start-storybook -p 9001",
    "server:prod": "cross-env NODE_ENV=production ts-node src/bin/app",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "build:story": "cross-env NODE_ENV=production STORYBOOK=true build-storybook -o $PWD/story"
  },
  "dependencies": {
    "apollo-server-hapi": "^1.2.0",
    "dotenv": "^5.0.1",
    "graphql-tools": "^2.6.1",
    "hapi": "^17.3.1",
    "inert": "^5.1.0"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.3.1",
    "@storybook/addon-actions": "^3.4.0",
    "@storybook/react": "^3.4.0",
    "@types/enzyme": "^3.1.9",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/globule": "^1.1.0",
    "@types/graphql": "^0.13.0",
    "@types/hapi": "^17.0.9",
    "@types/jest": "^22.2.2",
    "@types/node": "^9.6.2",
    "@types/react": "^16.3.5",
    "@types/react-dom": "^16.0.4",
    "@types/react-hot-loader": "^3.0.6",
    "@types/react-redux": "^5.0.15",
    "@types/redux-actions": "^2.2.4",
    "@types/storybook__addon-actions": "^3.0.3",
    "@types/storybook__react": "^3.0.7",
    "@types/webpack": "^4.1.3",
    "@types/webpack-env": "^1.13.5",
    "apollo-cache-inmemory": "^1.0.0",
    "apollo-client": "^2.0.1",
    "apollo-link-http": "^1.0.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "file-loader": "^1.1.11",
    "globule": "^1.2.0",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.5.0",
    "hapi-webpack-plugin": "^3.0.0",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "jest-enzyme": "^6.0.0",
    "node-dev": "^3.1.3",
    "normalize.css": "^8.0.0",
    "react": "^16.3.1",
    "react-addons-test-utils": "^15.6.2",
    "react-apollo": "^2.0.0",
    "react-dom": "^16.3.1",
    "react-hot-loader": "^4.0.1",
    "react-redux": "^5.0.7",
    "react-test-renderer": "^16.3.1",
    "redux": "^3.7.2",
    "redux-actions": "^2.3.0",
    "redux-devtools-extension": "^2.13.0",
    "redux-logger": "^3.0.6",
    "styled-components": "^3.2.5",
    "trash-cli": "^1.3.0",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-immutable": "^4.5.3",
    "tslint-language-service": "^0.9.9",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1",
    "wcb": "^0.6.4",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  }
}
