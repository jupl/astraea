{
  "name": "app",
  "version": "0.0.1",
  "bin": "dist/bin/app.js",
  "engines": {
    "node": ">=8"
  },
  "private": true,
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/common/store.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/setup-tests.ts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$"
  },
  "scripts": {
    "package": "npm run build:prod && npm pack && npm run clean",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tslint --type-check --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:dev": "cross-env NODE_ENV=development node-dev -r ts-node/register src/bin/app.ts",
    "server:hot": "cross-env HOT_MODULES=true npm run server:dev",
    "server:prod": "cross-env NODE_ENV=production ts-node --fast src/bin/app",
    "server:story": "cross-env NODE_ENV=development STORYBOOK=true start-storybook -p 9001",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "build:story": "cross-env NODE_ENV=production STORYBOOK=true build-storybook -o $PWD/story"
  },
  "dependencies": {
    "apollo-server-hapi": "^1.0.2",
    "deepmerge": "^1.5.0",
    "dotenv": "^4.0.0",
    "graphql": "^0.10.5",
    "graphql-tools": "^1.1.0",
    "hapi": "^16.5.0",
    "inert": "^4.2.0",
    "react-apollo": "^1.4.8",
    "semantic-ui-react": "^0.71.3"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.1.9",
    "@storybook/react": "^3.1.9",
    "@types/deepmerge": "^1.3.1",
    "@types/enzyme": "^2.8.2",
    "@types/globule": "^1.1.0",
    "@types/hapi": "^16.1.6",
    "@types/inert": "^4.2.2",
    "@types/jest": "^20.0.4",
    "@types/node": "^8.0.14",
    "@types/react": "^15.0.38",
    "@types/react-dom": "^15.5.1",
    "@types/react-hot-loader": "^3.0.3",
    "@types/react-redux": "^4.4.46",
    "@types/redux-actions": "^1.2.6",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__react": "^3.0.2",
    "@types/webpack": "^3.0.4",
    "@types/webpack-env": "^1.13.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-plugin-transform-semantic-ui-react-imports": "^1.3.0",
    "babel-preset-env": "^1.6.0",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.0",
    "eslint-config-jupl": "^0.6.2",
    "file-loader": "^0.11.2",
    "globule": "^1.2.0",
    "hapi-webpack-plugin": "^2.0.0",
    "jest": "^20.0.3",
    "jest-cli": "^20.0.4",
    "node-dev": "^3.1.3",
    "react": "^15.6.1",
    "react-addons-test-utils": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.5",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-devtools-extension": "^2.13.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.15.4",
    "semantic-ui-less": "^2.2.11",
    "semantic-ui-less-module-loader": "^1.0.0",
    "styled-components": "^2.1.1",
    "trash-cli": "^1.3.0",
    "ts-jest": "^20.0.7",
    "ts-node": "^3.2.0",
    "tslint": "^5.4.3",
    "tslint-language-service": "^0.9.6",
    "tslint-react": "^3.0.0",
    "typescript": "^2.4.2",
    "wcb": "^0.4.0",
    "webpack": "^3.3.0"
  }
}
